/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  --banner-height: 44px; /* 定义横幅高度变量 */
}

/* 当横幅显示时，为页面内容添加顶部内边距 */
.has-banner {
  padding-top: calc(var(--banner-height) + 10px); /* 横幅高度 + 额外间距 */
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}
