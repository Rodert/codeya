.container {
  padding: 20rpx;
  padding-bottom: 180rpx;
}

.question-card {
  background: var(--card-bg-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.difficulty {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.easy {
  background: #e8f5e9;
  color: #4caf50;
}

.medium {
  background: #fff3e0;
  color: #ff9800;
}

.hard {
  background: #ffebee;
  color: #f44336;
}

.view-count {
  font-size: 24rpx;
  color: #666;
}

.question-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  line-height: 1.4;
}

.answer-section {
  margin-top: 30rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.answer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.toggle-btn {
  color: #1976d2;
  font-size: 28rpx;
}

.answer-content {
  margin-top: 20rpx;
}

.section-title {
  display: block;
  font-weight: bold;
  margin: 20rpx 0 10rpx;
  color: #333;
}

.answer-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

.code-block {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 10rpx 0;
  font-family: monospace;
  white-space: pre-wrap;
  font-size: 24rpx;
  line-height: 1.5;
  color: #333;
}

.explanation-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  white-space: pre-wrap;
}

.points-info {
  text-align: center;
  margin: 30rpx 0;
  padding: 20rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
  color: #1976d2;
  font-size: 28rpx;
}

.points-info {
  padding: 10px 15px;
  background: #f8f8f8;
  margin: 10px 0;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.total-points {
  color: #333;
  font-weight: bold;
}

.potential-points {
  color: #4CAF50;
  font-size: 14px;
}

.nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.nav-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  width: 45%;
  transition: all 0.3s;
}

.nav-button:active {
  background: #e0e0e0;
}

.nav-button.disabled {
  opacity: 0.5;
  background: #f5f5f5;
}

.nav-placeholder {
  width: 45%;
}

.nav-icon {
  font-size: 36rpx;
  color: #1976d2;
  margin: 0 10rpx;
}

.nav-info {
  flex: 1;
  overflow: hidden;
}

.nav-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.nav-title {
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.page {
  padding: 30rpx;
  background: var(--bg-color);
  min-height: 100vh;
}

.question-card {
  background: var(--card-bg-color);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.question-header {
  margin-bottom: 30rpx;
}

.question-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.question-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.difficulty {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.difficulty-easy {
  background: #e6f7ed;
  color: #52c41a;
}

.difficulty-medium {
  background: #fff7e6;
  color: #fa8c16;
}

.difficulty-hard {
  background: #fff1f0;
  color: #f5222d;
}

/* 深色模式下的难度标签 */
page.dark-mode .difficulty-easy {
  background: #0f3620;
  color: #4cc870;
}

page.dark-mode .difficulty-medium {
  background: #3d2800;
  color: #ff9d42;
}

page.dark-mode .difficulty-hard {
  background: #3a1d1a;
  color: #ff6b6b;
}

.view-count {
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

.question-content {
  color: var(--text-color);
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.solution-section {
  margin-top: 40rpx;
  border-top: 1rpx solid var(--border-color);
  padding-top: 30rpx;
}

.solution-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.solution-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.toggle-icon {
  color: var(--highlight-color);
  font-size: 28rpx;
}

.solution-content {
  margin-top: 20rpx;
  color: var(--text-color);
}

.code-section {
  margin-top: 30rpx;
  border-top: 1rpx solid var(--border-color);
  padding-top: 30rpx;
}

.code-header {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.code-block {
  background: var(--question-code-bg);
  padding: 20rpx;
  border-radius: 12rpx;
  overflow-x: auto;
}

.code-content {
  font-family: monospace;
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--question-code-color);
  white-space: pre-wrap;
}

.points-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: var(--highlight-color);
  opacity: 0.8;
  border-radius: 8rpx;
  text-align: center;
}

.points-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.points-info {
  padding: 20rpx;
  background: var(--bg-color);
  margin: 30rpx 0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.total-points {
  color: var(--text-color);
  font-weight: bold;
  font-size: 28rpx;
}

.potential-points {
  color: var(--highlight-color);
  font-size: 26rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 20rpx 0;
}

.tag {
  background: var(--question-tag-bg);
  color: var(--question-tag-color);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.bottom-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.share-btn {
  background: var(--highlight-color);
  color: white;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.share-btn::after {
  border: none;
}

/* 导航部分 */
.navigation {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.nav-button {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: var(--card-bg-color);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.prev {
  justify-content: flex-start;
}

.next {
  justify-content: flex-end;
}

.nav-button:active {
  opacity: 0.8;
}

.nav-icon {
  font-size: 32rpx;
  color: var(--highlight-color);
  margin: 0 10rpx;
}

.nav-info {
  max-width: 80%;
}

.nav-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: 6rpx;
}

.nav-title {
  font-size: 26rpx;
  color: var(--text-color);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-placeholder {
  flex: 1;
}

.nav-button.disabled {
  opacity: 0.4;
  pointer-events: none;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
