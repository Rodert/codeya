.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 游戏头部信息样式 */
.game-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.score-container, .time-container, .moves-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-label, .time-label, .moves-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.score-value, .time-value, .moves-value {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 游戏介绍界面样式 */
.intro-screen {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.intro-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 100%;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 10rpx;
}

.intro-level {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 20rpx;
}

.intro-description {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.intro-feature {
  font-size: 32rpx;
  color: #2196f3;
  margin-bottom: 30rpx;
  text-align: center;
  font-weight: bold;
}

.intro-level-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: rgba(33, 150, 243, 0.1);
  border-radius: 16rpx;
}

.level-info-item {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.intro-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-top: 20rpx;
}

.start-button {
  flex: 1;
  margin-right: 10rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
  border: none;
}

.level-select-button {
  flex: 1;
  margin-left: 10rpx;
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(245, 124, 0, 0.3);
  border: none;
}

.back-button {
  width: 60%;
  margin-top: 30rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  border: none;
}

/* 关卡选择界面样式 */
.level-select-screen {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.level-select-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 100%;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.level-select-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 30rpx;
}

.levels-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 20rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

.level-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.level-item.unlocked {
  border: 2rpx solid #4caf50;
}

.level-item.locked {
  border: 2rpx solid #bdbdbd;
  opacity: 0.7;
}

.level-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 10rpx;
}

.level-details {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.level-grid-size, .level-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.level-lock {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 0;
}

.lock-icon {
  font-size: 36rpx;
}

.level-progress {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-top: 10rpx;
  border-top: 1rpx solid #e0e0e0;
}

.level-high-score, .level-best-moves {
  font-size: 22rpx;
  color: #4caf50;
}

/* 游戏主界面样式 */
.game-board {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.emoji-grid {
  display: grid;
  grid-gap: 16rpx;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.emoji-cell {
  aspect-ratio: 1;
  background-color: white;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.emoji-cell.empty {
  background-color: transparent;
  box-shadow: none;
}

.emoji {
  font-size: 48rpx;
  transition: all 0.3s ease;
}

.emoji-cell.selected {
  transform: scale(0.95);
  background-color: rgba(33, 150, 243, 0.2);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.emoji-cell.matched {
  visibility: hidden;
  opacity: 0;
  transform: scale(0);
  transition: all 0.5s ease;
}

/* 游戏结束界面样式 */
.game-over-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.game-over-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-over-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 20rpx;
}

.game-over-emoji {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.game-over-level {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 20rpx;
}

.game-over-score, .game-over-moves, .game-over-time {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.game-over-reward {
  font-size: 36rpx;
  font-weight: bold;
  color: #795548;
  margin: 20rpx 0 30rpx;
}

.game-over-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}

.restart-button, .exit-button, .game-over-buttons .level-select-button {
  width: 100%;
  margin: 10rpx 0;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}

.restart-button {
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.game-over-buttons .level-select-button {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(245, 124, 0, 0.3);
}

.exit-button {
  background: #f5f5f5;
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.restart-button::after, .exit-button::after, .level-select-button::after, .back-button::after {
  border: none;
}

/* 底部积分显示样式 */
.points-info {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 50;
  gap: 20rpx;
}

.points-display, .poop-display {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.points-display {
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
}

.poop-display {
  background: linear-gradient(135deg, #a1887f, #795548);
}

.points-icon, .poop-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.points-value, .poop-value {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-right: 10rpx;
}

.points-label, .poop-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
} 