.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 游戏头部信息样式 */
.game-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.score-container, .time-container, .moves-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-label, .time-label, .moves-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.score-value, .time-value, .moves-value {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 游戏介绍界面样式 */
.intro-screen {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.intro-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 100%;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 20rpx;
}

.intro-description {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.intro-feature {
  font-size: 32rpx;
  color: #2196f3;
  margin-bottom: 30rpx;
  text-align: center;
  font-weight: bold;
}

.intro-rules {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  align-self: flex-start;
}

.intro-rule-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  align-self: flex-start;
}

.intro-cost {
  font-size: 28rpx;
  color: #f44336;
  margin: 30rpx 0;
}

.start-button {
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
  border: none;
  margin-top: 20rpx;
}

/* 游戏主界面样式 */
.game-board {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.emoji-grid {
  display: grid;
  grid-gap: 16rpx;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.emoji-cell {
  aspect-ratio: 1;
  background-color: white;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.emoji {
  font-size: 48rpx;
  transition: all 0.3s ease;
}

.emoji-cell.selected {
  transform: scale(0.95);
  background-color: rgba(33, 150, 243, 0.2);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.emoji-cell.matched {
  visibility: hidden;
  opacity: 0;
  transform: scale(0);
  transition: all 0.5s ease;
}

/* 游戏结束界面样式 */
.game-over-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.game-over-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-over-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2196f3;
  margin-bottom: 20rpx;
}

.game-over-emoji {
  font-size: 60rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.game-over-score, .game-over-moves, .game-over-time {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.game-over-reward {
  font-size: 36rpx;
  font-weight: bold;
  color: #4caf50;
  margin: 20rpx 0 30rpx;
}

.game-over-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 20rpx;
}

.restart-button, .exit-button {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}

.restart-button {
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.exit-button {
  background: #f5f5f5;
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 底部积分显示样式 */
.points-info {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 50;
}

.points-display {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  padding: 16rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
}

.points-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-right: 10rpx;
}

.points-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
} 