/* Banner */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Share Button */
.share-container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
  border: none;
  width: auto;
  margin: 0;
}

.share-button::after {
  border: none;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* Categories */
.categories-section {
  margin: 20rpx 0;
  background: #fff;
}

.categories-list {
  margin: 20rpx;
}

.category-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  position: relative;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.category-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.question-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
  transform: rotate(90deg);
}

.category-questions {
  padding: 0 24rpx 24rpx;
  background: #f9f9f9;
}

.question-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.question-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.question-meta {
  display: flex;
  align-items: center;
}

/* 鸭鸭冒险游戏 */
.duck-game {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(33, 150, 243, 0.2);
}

.game-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.duck-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}

.game-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.points-display {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}

.points-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.points-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.game-description {
  font-size: 28rpx;
  color: white;
  margin-bottom: 20rpx;
}

.game-actions {
  display: flex;
  justify-content: center;
}

.game-button {
  background: linear-gradient(135deg, #ffeb3b, #ffc107);
  color: #795548;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(255, 193, 7, 0.3);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.game-button::after {
  border: none;
}

.game-button:active {
  transform: scale(0.95);
}

.game-button.disabled {
  background: linear-gradient(135deg, #e0e0e0, #bdbdbd);
  color: #757575;
  box-shadow: none;
}

.game-button-text {
  font-size: 32rpx;
}

.game-cost {
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 游戏弹窗 */
.game-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.game-container {
  width: 90%;
  height: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.game-popup-header {
  padding: 20rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.game-popup-title {
  font-size: 36rpx;
  font-weight: bold;
}

.game-popup-header .points-display {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.game-popup-header .points-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.game-popup-header .points-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.game-popup-close {
  font-size: 40rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
}

.game-canvas-container {
  flex: 1;
  position: relative;
  background-color: #f5f5f5;
}

.game-canvas {
  width: 100%;
  height: 100%;
}

.game-controls {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-top: 1rpx solid #e0e0e0;
}

.game-score, .game-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.game-instructions {
  padding: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.instructions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.instructions-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  align-self: flex-start;
}

.start-game-button {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
  border: none;
}

.start-game-button::after {
  border: none;
}

.game-over-panel {
  padding: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-over-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #f44336;
  margin-bottom: 20rpx;
}

.final-score, .time-survived {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.restart-button, .exit-button {
  margin-top: 20rpx;
  width: 80%;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.restart-button {
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
}

.restart-button[disabled] {
  background: linear-gradient(135deg, #e0e0e0, #bdbdbd);
  color: #757575;
  box-shadow: none;
}

.exit-button {
  background: #f5f5f5;
  color: #333;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.restart-button::after, .exit-button::after {
  border: none;
}

/* Recent Questions */
.recent-section {
  margin: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4CAF50;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recent-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recent-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.recent-meta {
  display: flex;
  align-items: center;
}

.difficulty {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.difficulty-easy {
  background: #e6f4ea;
  color: #1a7f37;
}

.difficulty-medium {
  background: #fff3e0;
  color: #e65100;
}

.difficulty-hard {
  background: #fbe9e7;
  color: #d32f2f;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}

/* 精选题目 */
.premium-questions {
  margin: 30rpx 20rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
  display: block;
}

.premium-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.premium-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid #ff9800;
}

.premium-item-content {
  display: flex;
  flex-direction: column;
}

.premium-item-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.premium-item-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.premium-item-category {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.premium-item-difficulty {
  color: #ff9800;
}
