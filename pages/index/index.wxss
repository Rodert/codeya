/* Banner */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Share Button */
.share-container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
  border: none;
  width: auto;
  margin: 0;
}

/* 深色模式下的按钮 */
page.dark-mode .share-button {
  background: linear-gradient(135deg, #388E3C, #1B5E20);
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.15);
}

.share-button::after {
  border: none;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* Categories */
.categories-section {
  margin: 20rpx 0;
  background: var(--card-bg-color);
}

.categories-list {
  margin: 20rpx;
}

.category-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  background: var(--card-bg-color);
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  overflow: hidden;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  position: relative;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.category-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.question-count {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-right: 20rpx;
}

.expand-icon {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  transform: rotate(90deg);
}

.category-questions {
  padding: 0 24rpx 24rpx;
  background: var(--bg-color);
}

.question-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: var(--card-bg-color);
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.question-title {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.question-meta {
  display: flex;
  align-items: center;
}

/* 游戏入口样式 */
.games-entry {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(33, 150, 243, 0.2);
}

/* 深色模式下的游戏入口 */
page.dark-mode .games-entry {
  background: linear-gradient(135deg, #0c6a9e, #0d47a1);
  box-shadow: 0 6rpx 20rpx rgba(13, 71, 161, 0.2);
}

.games-entry-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.games-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}

.games-info {
  flex: 1;
}

.games-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.games-description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 6rpx;
}

.games-arrow {
  font-size: 32rpx;
  color: white;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.games-preview {
  display: flex;
  justify-content: space-around;
}

.game-preview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-preview-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
  background-color: white;
  padding: 10rpx;
}

.game-preview-item text {
  font-size: 24rpx;
  color: white;
}

/* Recent Questions */
.recent-section {
  margin: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid var(--highlight-color);
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recent-item {
  background: var(--card-bg-color);
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.recent-title {
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
  display: block;
}

.recent-meta {
  display: flex;
  align-items: center;
}

.difficulty {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.difficulty-easy {
  background: #e6f4ea;
  color: #1a7f37;
}

.difficulty-medium {
  background: #fff3e0;
  color: #e65100;
}

.difficulty-hard {
  background: #fbe9e7;
  color: #c41c00;
}

/* 深色模式下的难度标签 */
page.dark-mode .difficulty-easy {
  background: #0f3620;
  color: #4cc870;
}

page.dark-mode .difficulty-medium {
  background: #3d2800;
  color: #ff9d42;
}

page.dark-mode .difficulty-hard {
  background: #3a1d1a;
  color: #ff6b6b;
}

.view-count {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 精选题目样式 */
.premium-questions {
  margin: 20rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-left: 28rpx;
  margin-top: 4rpx;
}

.premium-list {
  margin-top: 16rpx;
}

.premium-item {
  background: var(--card-bg-color);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  position: relative;
}

.premium-item:before {
  content: '⭐';
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 32rpx;
  color: gold;
}

.premium-item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.premium-item-meta {
  display: flex;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.premium-item-category {
  margin-right: 16rpx;
  background-color: var(--question-tag-bg);
  color: var(--question-tag-color);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 顶部提示横幅 */
.top-tip-banner {
  position: fixed;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 85%;
  z-index: 1000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #f09b62, #e97c4c);
  color: white;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 深色模式下的横幅 */
page.dark-mode .top-tip-banner {
  background: linear-gradient(135deg, #9e5c32, #8f3618);
}

.tip-content {
  flex: 1;
  text-align: center;
}

.tip-close {
  padding: 0 10rpx;
  font-size: 36rpx;
  font-weight: bold;
}

/* 免费提示信息 */
.free-tip {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background-color: var(--bg-color);
  border-bottom: 1rpx solid var(--border-color);
}

.info-icon {
  color: #ff6b00; 
  font-size: 32rpx;
  margin-right: 10rpx;
}

.free-text {
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

/* 移除页面内容下移的样式 */
.has-top-tip {
  /* 不再设置padding-top，让内容正常显示 */
}

/* 如果有banner，仍然需要下移，但不需要为顶部提示预留空间 */
.has-banner.has-top-tip {
  padding-top: var(--banner-height); /* 只为banner预留空间 */
}
