/* Banner */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Share Button */
.share-container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
  border: none;
  width: auto;
  margin: 0;
}

.share-button::after {
  border: none;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* Categories */
.categories-section {
  margin: 20rpx 0;
  background: #fff;
}

.categories-list {
  margin: 20rpx;
}

.category-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  position: relative;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.category-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.question-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
  transform: rotate(90deg);
}

.category-questions {
  padding: 0 24rpx 24rpx;
  background: #f9f9f9;
}

.question-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.question-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.question-meta {
  display: flex;
  align-items: center;
}

/* Recent Questions */
.recent-section {
  margin: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4CAF50;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recent-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recent-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.recent-meta {
  display: flex;
  align-items: center;
}

.difficulty {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.difficulty-easy {
  background: #e6f4ea;
  color: #1a7f37;
}

.difficulty-medium {
  background: #fff3e0;
  color: #e65100;
}

.difficulty-hard {
  background: #fbe9e7;
  color: #d32f2f;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}

/* 精选题目 */
.premium-questions {
  margin: 30rpx 20rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
  display: block;
}

.premium-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.premium-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid #ff9800;
}

.premium-item-content {
  display: flex;
  flex-direction: column;
}

.premium-item-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.premium-item-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.premium-item-category {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.premium-item-difficulty {
  color: #ff9800;
}
