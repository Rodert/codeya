/* Banner */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Section Title */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 30rpx;
  color: #333;
}

/* Categories */
.categories-section {
  margin: 20rpx 0;
  background: #fff;
}

.categories-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-item {
  border-bottom: 1rpx solid #eee;
}

.category-item:last-child {
  border-bottom: none;
}

.category-header {
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.category-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.question-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.expand-icon {
  color: #999;
  transition: transform 0.3s;
  font-size: 24rpx;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* Questions List */
.questions-list {
  height: 0;
  overflow: hidden;
  transition: height 0.3s ease-out;
  background: #f8f9fa;
}

.questions-list.expanded {
  height: auto;
  border-top: 1rpx solid #eee;
}

.question-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx 24rpx 70rpx;
  border-bottom: 1rpx solid #eee;
}

.question-item:last-child {
  border-bottom: none;
}

.question-title {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.question-meta {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.difficulty {
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  margin-right: 16rpx;
}

.difficulty-easy {
  background: #e6f4ea;
  color: #1a7f37;
}

.difficulty-medium {
  background: #fff3e0;
  color: #e65100;
}

.difficulty-hard {
  background: #fbe9e7;
  color: #d32f2f;
}

.view-count {
  font-size: 22rpx;
  color: #999;
}

/* Recent Questions */
.recent-section {
  margin: 30rpx 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.recent-list {
  padding: 0;
}

.recent-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-title {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.recent-meta {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
