/* Banner */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Share Button */
.share-container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
  border: none;
  width: auto;
  margin: 0;
}

.share-button::after {
  border: none;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* Categories */
.categories-section {
  margin: 20rpx 0;
  background: #fff;
}

.categories-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.category-item {
  border-bottom: 1rpx solid #eee;
}

.category-item:last-child {
  border-bottom: none;
}

.category-header {
  padding: 32rpx 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
}

.category-name {
  flex: 1;
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.question-count {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.expand-icon {
  color: #999;
  transition: transform 0.3s;
  font-size: 28rpx;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* Questions List */
.questions-list {
  height: 0;
  overflow: hidden;
  transition: height 0.3s ease-out;
  background: #f8f9fa;
}

.questions-list.expanded {
  height: auto;
  border-top: 1rpx solid #eee;
}

.question-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx 28rpx 84rpx;
  border-bottom: 1rpx solid #eee;
}

.question-item:last-child {
  border-bottom: none;
}

.question-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.question-meta {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.difficulty {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.difficulty-easy {
  background: #e6f4ea;
  color: #1a7f37;
}

.difficulty-medium {
  background: #fff3e0;
  color: #e65100;
}

.difficulty-hard {
  background: #fbe9e7;
  color: #d32f2f;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}

/* 鸭鸭冒险 - 随机刷题功能 */
.duck-adventure {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #ffeb3b, #ffc107);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 193, 7, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.adventure-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

.duck-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.adventure-title text {
  font-size: 36rpx;
  font-weight: bold;
  color: #795548;
  flex: 1;
}

.duck-level {
  background: #ff5722;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 87, 34, 0.3);
}

.adventure-description {
  font-size: 28rpx;
  color: #5d4037;
  text-align: center;
  margin-bottom: 20rpx;
}

.growth-bar-container {
  width: 100%;
  margin-bottom: 30rpx;
}

.growth-bar {
  height: 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.growth-progress {
  height: 100%;
  background: linear-gradient(to right, #4caf50, #8bc34a);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.growth-text {
  font-size: 24rpx;
  color: #5d4037;
  text-align: right;
  display: block;
  width: 100%;
}

.adventure-buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.adventure-button {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(245, 124, 0, 0.3);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
  flex: 1;
}

.achievement-button {
  background: linear-gradient(135deg, #9c27b0, #673ab7);
  color: white;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(156, 39, 176, 0.3);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.adventure-button::after,
.achievement-button::after,
.skin-button::after,
.ad-button::after {
  border: none;
}

.adventure-button:active,
.achievement-button:active,
.skin-button:active,
.ad-button:active {
  transform: scale(0.95);
}

.adventure-button-text {
  margin-right: 10rpx;
}

.adventure-emoji,
.achievement-emoji,
.skin-emoji,
.ad-emoji {
  font-size: 36rpx;
}

.skin-button {
  background: linear-gradient(135deg, #2196f3, #03a9f4);
  color: white;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.ad-button {
  background: linear-gradient(135deg, #e91e63, #f44336);
  color: white;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(233, 30, 99, 0.3);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
  position: relative;
}

.ad-button::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #ffeb3b;
  border-radius: 50%;
  top: 0;
  right: 0;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(255, 235, 59, 0.7);
  }
  
  70% {
    transform: scale(1);
    box-shadow: 0 0 0 10rpx rgba(255, 235, 59, 0);
  }
  
  100% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(255, 235, 59, 0);
  }
}

.premium-status {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.premium-text {
  font-size: 24rpx;
  color: #795548;
  font-weight: bold;
}

/* 广告奖励选项弹窗 */
.ad-options-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad-options-container {
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.ad-options-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ad-options-title {
  font-size: 36rpx;
  font-weight: bold;
}

.ad-options-close {
  font-size: 40rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
}

.ad-options-content {
  padding: 20rpx;
}

.ad-option-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.ad-option-item:active {
  background-color: #f9f9f9;
}

.ad-option-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.ad-option-info {
  flex: 1;
}

.ad-option-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.ad-option-desc {
  font-size: 26rpx;
  color: #666;
}

.ad-options-footer {
  padding: 20rpx;
  text-align: center;
  background-color: #f9f9f9;
}

.ad-options-note {
  font-size: 24rpx;
  color: #999;
}

/* 精选题目区域 */
.premium-questions {
  margin: 30rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.premium-list {
  margin-top: 20rpx;
}

.premium-item {
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #FFF9C4, #FFECB3);
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.2);
  position: relative;
  overflow: hidden;
}

.premium-item::before {
  content: '⭐';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 40rpx;
  opacity: 0.3;
}

.premium-item-content {
  position: relative;
  z-index: 1;
}

.premium-item-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #5D4037;
}

.premium-item-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.premium-item-category {
  color: #795548;
  background-color: rgba(255, 255, 255, 0.5);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.premium-item-difficulty {
  color: #FF5722;
  font-weight: bold;
}
