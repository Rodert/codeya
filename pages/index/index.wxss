/* Banner */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Share Button */
.share-container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
  border: none;
  width: auto;
  margin: 0;
}

.share-button::after {
  border: none;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* Categories */
.categories-section {
  margin: 20rpx 0;
  background: #fff;
}

.categories-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.category-item {
  border-bottom: 1rpx solid #eee;
}

.category-item:last-child {
  border-bottom: none;
}

.category-header {
  padding: 32rpx 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
}

.category-name {
  flex: 1;
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.question-count {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.expand-icon {
  color: #999;
  transition: transform 0.3s;
  font-size: 28rpx;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* Questions List */
.questions-list {
  height: 0;
  overflow: hidden;
  transition: height 0.3s ease-out;
  background: #f8f9fa;
}

.questions-list.expanded {
  height: auto;
  border-top: 1rpx solid #eee;
}

.question-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx 28rpx 84rpx;
  border-bottom: 1rpx solid #eee;
}

.question-item:last-child {
  border-bottom: none;
}

.question-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.question-meta {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.difficulty {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.difficulty-easy {
  background: #e6f4ea;
  color: #1a7f37;
}

.difficulty-medium {
  background: #fff3e0;
  color: #e65100;
}

.difficulty-hard {
  background: #fbe9e7;
  color: #d32f2f;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}
