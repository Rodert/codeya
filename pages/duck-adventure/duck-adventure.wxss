.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

.game-header {
  padding: 20rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
}

.points-display {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}

.points-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.points-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.game-canvas-container {
  flex: 1;
  position: relative;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.game-canvas {
  width: 100%;
  height: 100%;
}

.game-controls {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.game-score, .game-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.game-instructions {
  padding: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.instructions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.instructions-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  align-self: flex-start;
}

.instructions-cost {
  font-size: 28rpx;
  color: #f44336;
  margin: 20rpx 0;
  font-weight: bold;
}

.start-game-button {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
  border: none;
}

.start-game-button::after {
  border: none;
}

.game-over-panel {
  padding: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

.game-over-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #f44336;
  margin-bottom: 20rpx;
}

.final-score, .time-survived {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.restart-button, .exit-button {
  margin-top: 20rpx;
  width: 80%;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.restart-button {
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(33, 150, 243, 0.3);
}

.restart-button[disabled] {
  background: linear-gradient(135deg, #e0e0e0, #bdbdbd);
  color: #757575;
  box-shadow: none;
}

.exit-button {
  background: #f5f5f5;
  color: #333;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.restart-button::after, .exit-button::after {
  border: none;
} 