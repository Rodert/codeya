/* 整体容器 */
.profile-container {
  min-height: 100vh;
  background: var(--bg-color);
}

/* 用户信息区域 */
.user-info-section {
  position: relative;
  padding: 40rpx 30rpx;
  background: linear-gradient(to right, #1296db, #36b4e5);
  display: flex;
  align-items: center;
}

/* 深色模式下的用户信息区域 */
page.dark-mode .user-info-section {
  background: linear-gradient(to right, #0c6a9e, #1e8cb5);
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.sign {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 统计数据区域 */
.statistics-section {
  margin: 20rpx;
  background: var(--card-bg-color);
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  color: var(--text-color);
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 分享按钮 */
.share-container {
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.share-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1296db, #36b4e5);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
  border: none;
  width: 80%;
  margin: 0;
  text-align: center;
}

/* 深色模式下的分享按钮 */
page.dark-mode .share-button {
  background: linear-gradient(135deg, #0c6a9e, #1e8cb5);
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.15);
}

.share-button::after {
  border: none;
}

/* 功能列表区域 */
.function-list {
  margin: 20rpx;
  background: var(--card-bg-color);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.function-item:last-child {
  border-bottom: none;
}

.function-name-container {
  flex: 1;
  display: flex;
  align-items: center;
}

.function-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.function-name {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

/* 清除数据按钮样式 */
.function-item:last-child .function-name {
  color: #e74c3c;
  font-weight: 500;
}

/* 深色模式下的清除数据按钮 */
page.dark-mode .function-item:last-child .function-name {
  color: #ff6b6b;
}

.arrow {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-left: 10rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 二维码样式 */
.qrcode-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.qrcode-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
}

.qrcode-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 意见反馈相关样式 */
.feedback-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.feedback-item text {
  font-size: 32rpx;
  color: var(--text-color);
}

/* 客服按钮样式 */
.contact-button {
  background: transparent;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  line-height: normal;
  border: none;
  border-radius: 0;
  font-size: inherit;
  text-align: left;
}

.contact-button::after {
  border: none;
}

/* 主题切换开关样式 */
.theme-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: var(--card-bg-color);
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.theme-switch-left {
  display: flex;
  align-items: center;
}

.theme-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.theme-switch-text {
  font-size: 28rpx;
  color: var(--text-color);
}
