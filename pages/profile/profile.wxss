/* 整体容器 */
.profile-container {
  min-height: 100vh;
  background: #f5f6fa;
}

/* 用户信息区域 */
.user-info-section {
  position: relative;
  padding: 40rpx 30rpx;
  background: linear-gradient(to right, #1296db, #36b4e5);
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.sign {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 统计数据区域 */
.statistics-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能列表区域 */
.function-list {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.function-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 30rpx;
  font-size: 24rpx;
  color: #999;
}
